{
  "name": "playwright-code-base",
  "version": "1.0.0",
  "description": "Playwright automation framework with Allure reporting and multi-platform CI/CD support",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:report": "ts-node scripts/test-runner.ts",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "report:clean": "ts-node scripts/cleanup-reports.ts",
    "setup:ci": "ts-node scripts/setup-ci.ts",
    "validate:env": "ts-node scripts/validate-env.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.enouvo.com:enouvo/team-qa/playwright-code-base.git"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "allure",
    "ci-cd"
  ],
  "author": "Enouvo QA Team",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "allure-playwright": "^2.15.1",
    "allure-commandline": "^2.25.0",
    "nodemailer": "^6.9.8",
    "@types/nodemailer": "^6.4.14",
    "nodemailer-express-handlebars": "^6.1.0",
    "http-server": "^14.1.1",
    "prompts": "^2.4.2",
    "@types/prompts": "^2.4.9",
    "chalk": "^4.1.2",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}